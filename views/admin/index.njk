{% extends "./layout.njk" %}

{% block content %}

<section class="index">
    <div class="index-header">
        <h2>Gerenciar receitas</h2>
        <a href="/admin/recipes/create">Nova receita</a>
    </div>

    <div class="cards">

        {% for recipe in recipes %}

        <div class="card">
            <img src="{{ recipe.image_url }}" alt="{{ recipe.title }}">
            <div>
                <h3>{{ recipe.title }}</h3>
                <p>por {{ recipe.author }}</p>
                <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
            </div>
        </div>

        {% endfor %}
    </div>

</section>

{% endblock content %}