{% extends "layout.njk" %}

{% block content %}

<div class="details">
    <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
    <h1>{{ recipe.title }}</h1>
    <p>por {{ recipe.author }}</p>
    <div class="recipe-information">
        <div class="button">
            <h2>Ingredientes</h2>
            <a class="show-and-hide">Esconder</a>
        </div>
        <ul class="visible">
            {% for ingredient in recipe.ingredients %}
            <li>{{ingredient}}</li>
            {% endfor %}
        </ul>
    </div>
    
    <div class="recipe-information">
        <div class="button">
            <h2>Modo de preparo</h2>
            <a class="show-and-hide">Esconder</a>
        </div>
        <ul class="visible">
            {% for step in recipe.preparation %}
            <li>{{step}}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="recipe-information">
        <div class="button">
            <h2>Informações adicionais</h2>
            <a class="show-and-hide">Esconder</a>
        </div>
        <p class="visible">{{ recipe.information }}</p>
    </div>
</div>

{% endblock content %}
