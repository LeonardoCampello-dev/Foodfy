<div class="item">
    <div>Email</div>

    <div>
        <input 
            type="email" 
            name="email" 
            value="{{ user.email }}" 
            placeholder="Digite seu email"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>

    <div>
        <input 
            type="password" 
            name="password" 
            value="{{ user.password }}" 
            placeholder="Digite sua senha"
        >
    </div>
</div>


