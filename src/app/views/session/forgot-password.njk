{% extends "./layout.njk" %}

{% block content %}

<div class="form">
    <form action="/admin/users/forgot-password" method="POST">
    
        <h2>
            Esqueceu a senha? 
            <span>
                <img src="/assets/icons/forgot.svg" alt="Login">
            </span>
        </h2>

        <div class="item">
            <div>Email</div>

            <div>
                <input 
                    type="email" 
                    name="email" 
                    value="{{ user.email }}" 
                    placeholder="Digite seu email para recuperar sua senha"
                    onblur="Validate.apply(this, 'isEmail')"
                >
            </div>
        </div>

        <div class="footer-session">
            <button class="button">Recuperar</button>
        </div>

    </form>
</div>

{% endblock content %}