{% extends "./layout.njk" %}

{% block content %}

<section>

    <div class="recipes">
        
        {% if filter %}
        
        <h2>Buscando por "{{ filter }}"</h2>

        <div class="cards">
            
            {% for recipe in recipes %}
                <div class="card" id="{{ recipe.id }}">
                    <a href="/recipes/{{ recipe.id }}">
                        <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                    </a>
                    <h3>{{ recipe.title }}</h3>
                    <p>por {{ recipe.chef_name }}</p>
                </div>
            {% endfor %}

        </div>

        {% else %}
        
            <div class="not-found">
                
                <img src="/assets/not-found.svg" alt="Receitas nÃ£o encontradas">

                <h2>
                    Nenhuma receita encontrada
                    <i class="material-icons">sentiment_very_dissatisfied</i>
                </h2>

            </div>        
        
        {% endif %}
                
    </div>

</section>

{% block scripts %}
<script src="/scripts/redirect.js"></script>
{% endblock scripts %}

{% endblock content %}