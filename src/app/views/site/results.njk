{% extends "./layout.njk" %}

{% block content %}

<section>

    <div class="recipes">
        
        {% if filter %}
        
        <h2>Buscando por "{{ filter }}"</h2>

        <div class="cards">
            
            {% for recipe in recipes %}
            
                <div class="card" id="{{ recipe.id }}">
                    <a href="/recipes/{{ recipe.id }}">
                        <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                    </a>
                    
                    <h3>{{ recipe.title }}</h3>
                    
                    <p>por {{ recipe.chef_name }}</p>
                </div>
                
            {% endfor %}

        </div>
                
    </div>

</section>

{% block scripts %}
<script src="/scripts/redirect.js"></script>
{% endblock scripts %}

{% endblock content %}