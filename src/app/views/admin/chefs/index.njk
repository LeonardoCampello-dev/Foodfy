{% extends "../layout.njk" %}

{% block content %}

<section class="index">

    <div class="index-header">
        <h2>Gerenciar chefs</h2>

        <a href="/admin/chefs/create">Novo chef</a>
    </div>

    <div class="cards chefs">

        {% for chef in chefs %}

            <div class="card chef">
                <img src="{{ chef.avatar_url }}" alt="{{ chef.name }}">
                <div>
                    <h3>{{ chef. name }}</h3>

                    <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                </div>
            </div>

        {% endfor %}

    </div>

</section>

{% endblock content %}