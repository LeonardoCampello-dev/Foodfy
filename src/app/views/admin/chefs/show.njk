{% extends "../layout.njk" %}

{% block content %}

<div class="details">

    <div class="page-header">
        <h2>Chef: {{ chef.name }}</h2>
        <a href="/admin/chefs/{{ chef.id }}/edit" class="purple-button">Editar chef</a>
    </div>

    <div class="chef-detail">
        <img src="{{ chef.avatar_url }}" alt="{{ chef.name }}">
        
        <h1>{{ chef.name }}</h1>
        <p>
            {% if chef.totalRecipes == 1 %}
                {{ totalRecipes}} receita
            {% elseif totalRecipes > 1 %}
                {{ totalRecipes}} receitas
            {% else %}
                Nenhuma receita encontrada
            {% endif %}
        </p>
    </div>

</div>

{% if chef.recipes_name %}

<section class="index">
    
    <div class="index-header">
        <h2>Receitas</h2>
    </div>

    <div class="cards-admin">

        {% for recipe in recipes %}

            <div class="card">
                <img src="{{ recipe.recipes_image }}" alt="{{ recipe.recipes_name }}">
                <div>
                    <h3>{{ recipe.recipes_name }}</h3>
                    <p>por {{ chef.name }}</p>
                    
                    <a href="/admin/recipes/{{ recipe.recipes_id }}">Visualizar</a>
                </div>
            </div>

        {% endfor %}

    </div>

</section>

{% endif %}

{% endblock content %}