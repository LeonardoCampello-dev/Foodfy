{% extends "../layout.njk" %}

{% block content %}

<div class="details">

    <div class="page-header">
        <h2>
            Chef: {{ chef.name }}
            <span>
                <i class="material-icons">person</i>
            </span>
        </h2>
        <a href="/admin/chefs/{{ chef.id }}/edit" class="button">Editar chef</a>
    </div>

    <div class="chef-detail">
        <img src="{{ chefAvatar.path }}" alt="{{ chef.name }}">
        
        <h1>{{ chef.name }}</h1>
        <p>
            {% if chef.total_recipes == 1 %}
                Uma receita
            {% elif chef.total_recipes > 1%}
                {{chef.total_recipes}}
                receitas
            {% else %}
                Nenhuma receita encontrada
            {% endif %}
        </p>
    </div>

</div>

{% if chef.total_recipes >= 1 %}

<section class="index">
    
    <div class="index-header chef-recipes">
        <h2>Receitas</h2>
    </div>

    <div class="cards-admin">

        {% for recipe in recipes %}

            <div class="card">
                <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                <div>
                    <h3>{{ recipe.title }}</h3>
                    <p>por {{ chef.name }}</p>
                    
                    <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                </div>
            </div>

        {% endfor %}

    </div>

</section>

{% endif %}


{% endblock content %}