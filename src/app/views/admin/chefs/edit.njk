{% extends "../layout.njk" %}

{% block content %}

<div class="form">

    <form id="form-delete" action="/admin/chefs?_method=DELETE" method="POST">
        <input type="hidden" name="id" value="{{ chef.id }}">
        
        <button type="submit" id="chef-delete" class="purple-button">Deletar</button>
    </form>

    <form action="/admin/chefs?_method=PUT" method="POST">
    
        <div class="page-header">
            <h2>Editando chef</h2>
            
            <button type="submit" class="purple-button">Salvar chef</button>
        </div>

        {% include "./fields.njk" %}
        
    </form>
    
</div>

{% include "../confirm.njk" %}

{% endblock content %}