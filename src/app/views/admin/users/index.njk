{% extends "../layout.njk" %}

{% block content %}

<section class="index">

    <div class="page-header">
        <h2>Gerenciar usuários</h2>

        <a href="/admin/users/register" class="button">Novo usuário</a>
    </div>

    <div class="cards users">

        {% for user in users %}

            <div class="card-user">
                <h2>
                    {{ user.name }}
                    {% if user.you %}
                        <span class="that-you">Você</span>
                    {% endif %}
                </h2>
                <p>{{ user.email }}</p>

                <div class="card-buttons">
                    <a href="/admin/users/{{ user.id }}">Editar</a>
                    <a href="/admin/users/{{ user.id }}">Remover</a>
                </div>
            </div>

        {% endfor %}

    </div>

</section>


{% endblock content %}