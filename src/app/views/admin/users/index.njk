{% extends "../layout.njk" %}

{% block content %}

<section class="index">

    <div class="page-header">
        <h2>Gerenciar usuários</h2>

        <a href="/admin/users/register" class="button">Novo usuário</a>
    </div>

    <div class="cards users">

        {% for user in users %}

            <div class="card-user">
                <h2>{{ user.name }}</h2>
                <p>{{ user.email }}</p>

                <div class="card-buttons">
                    <a href="/admin/users/{{ user.id }}/edit">Editar</a>
                    <a href="/admin/users/{{ user.id }}/edit">Remover</a>
                </div>
            </div>

        {% endfor %}

    </div>

</section>


{% endblock content %}