{% extends "../layout.njk" %}

{% block content %}

<div class="form">

    <form id="form-delete" action="/admin/users?_method=DELETE" method="POST">
        <input 
            type="hidden" 
            name="id" 
            value="{{ user.id }}"
        >
        
        <button 
            type="submit" 
            id="user-delete" 
            class="button"
        >Deletar</button>
    </form>

    <form action="/admin/users?_method=PUT" method="POST">
    
        <div class="page-header">
            <h2>Editando usuário</h2>
            
            <button type="submit" class="button">Salvar usuário</button>
        </div>

        {% include "./fields.njk" %}
        
    </form>
    
</div>

{% include "../confirm.njk" %}

{% endblock content %}