{% extends "../layout.njk" %}

{% block content %}

<section class="index">
    
    <div class="page-header">
        <h2>Gerenciar receitas</h2>
        
        <a href="/admin/recipes/create" class="button">Nova receita</a>
    </div>

    <div class="cards-admin">

        {% for recipe in recipes %}

            <div class="card">
                <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                <div>
                    <h3>{{ recipe.title }}</h3>

                    {% if recipe.owner %}
                    
                        <p class="owner">Você é o dono da receita</p>
                        
                    {% else %}
                    
                        <p>por {{ recipe.chef_name }}</p>
                        
                    {% endif %}

                    <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                </div>
            </div>

        {% endfor %}
        
    </div>

    <div 
        class="pagination" 
        data-page="{{ pagination.page }}" 
        data-total="{{ pagination.total }}" 
        data-filter="{{ filter }}"
    ></div>

</section>

{% endblock content %}