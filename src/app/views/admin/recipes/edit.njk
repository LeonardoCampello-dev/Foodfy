{% extends "../layout.njk" %}

{% block content %}

<div class="form">
    
    <form id="form-delete" action="/admin/recipes?_method=DELETE" method="POST">
        <input type="hidden" name="id" value="{{ recipe.id }}">

        <button type="submit" id="delete-button" class="button">Deletar</button>
    </form>

    <form action="/admin/recipes?_method=PUT" method="POST" enctype="multipart/form-data">
    
        <div class="page-header">
            <h2>Editando receita</h2>
            
            <div>
                <button type="submit" class="button">Salvar receita</button>
            </div>
        </div>

        {% include "./fields.njk" %}
        
    </form>
    
</div>

{% endblock content %}