{% extends "../layout.njk" %}

{% block content %}

<div class="form">
    
    <form id="form-delete" action="/admin/recipes?_method=DELETE" method="POST">
        <input type="hidden" name="id" value="{{ recipe.id }}">

        <button type="submit" id="delete-button">Deletar</button>
    </form>

    <form action="/admin/recipes?_method=PUT" method="POST">
    
        <div class="form-header">
            <h2>Editando receita</h2>
            
            <div>
                <button type="submit">Salvar receita</button>
            </div>
        </div>

        <div class="item">
            <div>Imagem da receita</div>
            
            <div>
                <input type="url" name="image" value="{{ recipe.image }}" placeholder="http://" required="required">
            </div>
        </div>

        <div class="item">
            <div>Título</div>
            
            <div>
                <input type="text" name="title" value="{{ recipe.title }}" placeholder="Ex: Triplo Bacon Burguer" required="required">
            </div>
        </div>

        <div class="item">
            <div>Chef</div>
            
            <div>

                <select name="chef">
                    {% for chef in chefSelectOptions %}
                    <option value="{{ chef.id }}" {% if recipe.chef_id == chef.id %} selected {% endif %}> 
                    {{ chef.name }}
                    </option>                        
                    {% endfor %}
                </select>
                
            </div>
        </div>

        <div class="item" id="ingredients">
            <div>Ingredientes</div>
            
            {% for ingredient in recipe.ingredients %}
                <div class="ingredient">
                    <input type="text" name="ingredients[]" value="{{ ingredient }}" required="required">
                </div>
            {% endfor %}
        </div>
        
        <a class="add-ingredient">Adicionar novo ingrediente</a>

        <div class="item" id="preparations">
            <div>Modo de preparo</div>
            
            {% for step in recipe.preparation %}
                <div class="preparation">
                    <input type="text" name="preparation[]" value="{{ step }}" required="required">
                </div>
            {% endfor %}
        </div>
        
        <a class="add-preparation">Adicionar novo passo</a>

        <div class="item">
            <div>Informações adicionais</div>
            
            <div>
                <textarea name="information" cols="30" rows="10">{{ recipe.information }}</textarea>
            </div>
        </div>

        <input type="hidden" name="id" value="{{ recipe.id }}">
        
    </form>
    
</div>

<script src="/add.js"></script>

{% include "../confirm.njk" %}

{% endblock content %}